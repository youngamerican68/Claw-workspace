# MissedCallCloser Environment Variables
# Copy this file to .env.local and fill in your values

# Base URL for webhooks (use ngrok for local dev, your domain for production)
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+15551234567

# OpenAI Configuration (for AI conversations)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Business Configuration
BUSINESS_NAME=Your Business Name

# Optional: Database (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/missedcallcloser

# Optional: SMS notifications
# NOTIFICATION_PHONE=+15559876543
